@{
    ViewData["Title"] = "Lecturer - ContractMonthlyClaimSystem";
}

<div class="container py-4">
    <div class="row mb-4">
        <div class="col">
            <h2 class="fw-semibold">Lecturer Dashboard</h2>
            <p class="text-muted">Prototype UI only â€” no logic implemented yet.</p>
        </div>
    </div>

    <div class="row g-4">
        <div class="col-md-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">Submit Claim</h5>
                    <p class="card-text text-muted">Prepare monthly claim with hours and rate.</p>
                    <a asp-action="SubmitClaim" class="btn btn-primary mt-auto">Submit Claim</a>
