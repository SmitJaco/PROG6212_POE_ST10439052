                    <p class="card-text text-muted">Upload timesheets or proof of work.</p>
                    <a asp-action="AttachDocuments" class="btn btn-outline-primary mt-auto">Attach Documents</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">Track Claim Status</h5>
                    <p class="card-text text-muted">View submission and approval progress.</p>
                    <a asp-action="TrackStatus" class="btn btn-light border mt-auto">Track Status</a>
                </div>
            </div>
        </div>
    </div>
</div>


